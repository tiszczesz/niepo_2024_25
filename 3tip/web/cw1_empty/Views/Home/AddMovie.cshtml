@model cw1_empty.Models.Movie
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Dodawanie filmu</title>
</head>

<body>
    <div class="container">
        <h1>Dodawanie nowego filmu</h1>
        <form asp-asp-action="AddMovie" method="post">
            <div class="row m-2">
                 <label class="col-3 text-end" asp-for="Title"></label>
                 <input type="text" class="col-6" asp-for="Title">
                 <span class="col-3 rext-danger"></span>
            </div>
             <div class="row m-2">
                 <label class="col-3 text-end" asp-for="Director"></label>
                 <input type="text" class="col-6" asp-for="Director">
                 <span class="col-3 rext-danger"></span>
            </div>
            <div class="row m-2">
                 <label class="col-3 text-end" asp-for="Year"></label>
                 <input type="number" class="col-6" asp-for="Year">
                 <span class="col-3 rext-danger"></span>
            </div>
            <div class="row m-2">
                    <button type="submit" class="btn btn-primary offset-3 col-6">Dodaj</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>