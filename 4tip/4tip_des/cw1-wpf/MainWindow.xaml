<Window x:Class="cw1_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cw1_wpf"
        mc:Ignorable="d"
        Title="Okno główne" Height="350" Width="600">
    <StackPanel Orientation="Vertical" Margin="10" Background="#FFE8DCDC">
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Width="200" HorizontalContentAlignment="Right" Margin="0,10,0,0">Podaj a:</Label>
            <TextBox x:Name="txtA" Width="370" Margin="0,10,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Width="200" HorizontalContentAlignment="Right" Margin="0,10,0,0">Podaj b:</Label>
            <TextBox x:Name="txtB" Width="370" Margin="0,10,0,0" />
        </StackPanel>
        <Button Margin="10,10,10,0" >
            Oblicz NWD
        </Button>
        <Label x:Name="result" Width="200" Margin="30" ></Label>
    </StackPanel>
</Window>
