<Window x:Class="cw1_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cw1_wpf"
        mc:Ignorable="d"
        Title="Okno główne" Height="350" Width="600">
    <StackPanel Orientation="Vertical" Margin="10">
       <StackPanel Orientation="Horizontal">
           <Label Width="200" HorizontalContentAlignment="Right">Podaj a: </Label>
            <TextBox x:Name="txtA" Width="300" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="200" HorizontalContentAlignment="Right">Podaj b:</Label>
            <TextBox x:Name="txtB" Width="300" />
        </StackPanel>
        <Button Width="200" Margin="30">Oblicz NWD</Button>
        <Label x:Name="result" Width="200" Margin="30" ></Label>
    </StackPanel>
</Window>
